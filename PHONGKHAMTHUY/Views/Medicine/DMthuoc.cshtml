@model List<PHONGKHAMTHUY.Domain.DANHMUC>
@{
    ViewBag.Title = "Quản lý danh mục";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Breadcrumb = "Danh mục thuốc";
    ViewBag.PageText = "Danh mục thuốc";
}

<div class="row">
    <div class="col-7">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Danh mục</h4>

                <div class="table-responsive">
                    <table id="zero_config" class="table table-striped table-bordered no-wrap">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tên vật nuôi</th>
                                <th>Ngày tạo</th>
                                <th>SỬA</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var list in Model)
                            {
                                <tr>
                                    <td>@list.IDDANHMUC</td>
                                    <td contenteditable="true" class="editable" data-id="@list.IDDANHMUC" data-field="TENDANHMUC">@list.TENDANHMUC</td>
                                    <td>@(list.NGAYTAO.HasValue ? list.NGAYTAO.Value.ToString("dd/MM/yyyy") : "N/A")</td>
                                    <td><button id="save-dm" class="btn btn-outline-info" data-id="@list.IDDANHMUC">Save</button></td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
    <div class="col-5">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Tạo mới danh mục</h4>
                <form id="form" class="pl-3 pr-3" method="post" action="/Medicine/DMthuoc" enctype="multipart/form-data">
                    <div class="form-group">
                        <h6 class="text-muted font-weight-normal mb-0 w-100 text-truncate">Tên danh mục thuốc</h6>
                        <input class="form-control border-primary border-top-0 border-right-0 border-left-0"
                               type="text" id="tendm" maxlength="50" name="tenDM" required>
                    </div>
                    <button id="btnAdd" type="submit" class="btn btn-primary">Thêm</button>

                </form>
            </div>
        </div>
    </div>
</div>


