@model List<PHONGKHAMTHUY.Models.BillModel>
@{
    ViewBag.Title = "Danh sách hóa đơn";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Breadcrumb = "Hóa đơn";
    ViewBag.PageText = "Danh sách hóa đơn";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Hóa đơn</h4>
                <div class="table-responsive">
                    <table id="zero_config" class="table table-striped table-bordered no-wrap">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Khách hàng</th>
                                <th>Vật nuôi</th>
                                <th>Người lập</th>
                                <th>Ngày tạo</th>
                                <th>Tổng tiền</th>
                                <th>Chi tiết</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var list in Model)
                            {
                                <tr>
                                    <td>@list.HOADON.IDHOADON</td>
                                    <td>
                                        <span style="color:blueviolet">@list.KHACHHANG.HOTEN</span><br />
                                        Đ/c:@list.KHACHHANG.DIACHI<br />
                                        @list.KHACHHANG.DIENTHOAI
                                    </td>
                                    <td>
                                        <span style="color:blueviolet">@list.VATNUOI.TEN</span><br />
                                        @list.VATNUOI.LOAI - @list.VATNUOI.GIONG<br />
                                        @list.VATNUOI.TUOI tháng
                                    </td>
                                    <td>@list.TAIKHOAN.HOTEN</td>
                                    <td>@list.HOADON.NGAYTAO</td>
                                    <td>@list.HOADON.TONGTIEN.ToString("N0") vnđ</td>
                                    <td>
                                        <a href="@Url.Action("ShowBill", "Bill",new { id = list.HOADON.IDHOADON })"><i class="icon-info"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

